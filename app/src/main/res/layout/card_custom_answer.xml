<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:id="@+id/txtAnswer"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRateCount"
            android:layout_marginRight="10dp"
            android:text="3 Voter "/>

        <View
            android:layout_marginTop="8dp"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/dot_divider"></View>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtAnswerer"
            android:layout_height="wrap_content"
            android:text="Answerer "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imgButtonEdit"
            android:background="@drawable/iconfinder_share_353438"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:text="Share"/>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:id="@+id/imgButtonShare"
            android:layout_marginLeft="25dp"
            android:background="@drawable/iconfinder_thumb_up_326712"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginLeft="3dp"
            android:text="Vote"/>


    </LinearLayout>


</LinearLayout>